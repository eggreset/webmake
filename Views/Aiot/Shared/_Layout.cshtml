<body class="index">
    <div class="wrapper">
        <!--===================================MemuTop================================================-->
        <form action="@Url.Action("Search", "Home")" method="get" name="header_search">
            @Html.Action("Menu", "Item", new { position = MyTool.Enums.MenuPosition.Top })
        </form>

        <div class="nav_back"></div>

        <!--===================================主圖輪播================================================-->
        @RenderSection("MainSlider", required: false)

        <!--======================================BodyContainer================================================-->
        @RenderBody()

        <!--======================================FOOTRE================================================-->
        <footer id="footer">
            <div class="pagetop"><span>PAGE TOP</span></div>
            <div class="footer_container com_article">
                <div class="footer_container--credit aside_7">
                    <div class="footer_logo">
                        <a href="@Url.Action("Index","Home")"><img src="~/html/Aiot/images/aiot_logo.png"></a>
                    </div>
                    @if (ClientInfo != null)
                    {
                        <p>
                            Add｜@ClientInfo.Data.Address<br>
                            Tel.@ClientInfo.Data.Phone<br>
                            Fax.@ClientInfo.Data.Phone
                        </p>
                    }
                </div>
                <div class="footer_container--nav aside_7">
                    @Html.Action("Menu", "Item", new { position = MyTool.Enums.MenuPosition.Bottom })
                    <div class="footer_container--credit width">
                        <ul class="footer_sns">
                            <li class="btn twitter"><a href="https://twitter.com/shirokuma014" target="_blank">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                            @if (!string.IsNullOrEmpty(SiteInfo.Facebook))
                            {
                                <li class="btn facebook"><a href="@SiteInfo.Facebook" target="_blank">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                            }
                            @if (!string.IsNullOrEmpty(SiteInfo.Instagram))
                            {
                                <li class="btn instagram"><a href="@SiteInfo.Instagram" target="_blank">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                            }
                            <li class="btn line"><a href="https://page.line.me/oic-okayama" target="_blank">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
        <div class="copyright"><p>@(SiteInfo?.Copyright)</p></div>
    </div>

    <script src="~/html/Aiot/js/flickity-docs.min.js"></script>
    <!-- Jquery-2.2.4 js -->
    <script src="~/html/LoveTaiwan/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="~/html/LoveTaiwan/js/bootstrap/popper.min.js"></script>
    <!-- Bootstrap-4 js -->
    <script src="~/html/LoveTaiwan/js/bootstrap/bootstrap.min.js"></script>
    <!-- All Plugins JS -->
    <script src="~/html/LoveTaiwan/js/others/plugins.js"></script>
    <!-- Active JS -->
    <script src="~/html/LoveTaiwan/js/active.js"></script>
    @Html.Partial("_ShowMessage")
    @Html.Partial("_BaseScripts")

    <script src="~/html/Aiot/js/TweenMax.min.js"></script>
    <script src="~/html/Aiot/js/jquery-ui.min.js"></script>
    <script src="~/html/Aiot/js/jquery.easing.1.3.js"></script>
    <script src="~/html/Aiot/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/html/Aiot/js/jquery.matchHeight.js"></script>
    <script src="~/html/Aiot/js/common.js"></script>
    <script src="~/html/Aiot/js/wow.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.6.15/browser-polyfill.min.js"></script>
    <script src="~/html/Aiot/js2/polaris.js"></script>
    @*<script src="~/html/Aiot/js2/canopus.js"></script>
    <script src="~/html/Aiot/js2/app.js"></script>*@
    <script>
        new WOW().init();
    </script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.min.js'></script>
    <script type="text/javascript">
        $(function () {
            $('.mhn-slide').owlCarousel({
                nav: true,
                //loop:true,
                slideBy: 'page',
                rewind: false,
                responsive: {
                    0: { items: 1 },
                    480: { items: 2 },
                    600: { items: 2 },
                    1000: { items: 3 }
                },
                smartSpeed: 70,
                onInitialized: function (e) {
                    $(e.target).find('img').each(function () {
                        if (this.complete) {
                            $(this).closest('.mhn-inner').find('.loader-circle').hide();
                            $(this).closest('.mhn-inner').find('.mhn-img').css('background-image', 'url(' + $(e.target).attr('src') + ')');
                        } else {
                            $(this).bind('load', function (e) {
                                $(e.target).closest('.mhn-inner').find('.loader-circle').hide();
                                $(e.target).closest('.mhn-inner').find('.mhn-img').css('background-image', 'url(' + $(e.target).attr('src') + ')');
                            });
                        }
                    });
                },
                navText: ['<i class="fas fa-chevron-left"></i>', '<i class="fas fa-chevron-right"></i>']
            });
        });
        $(function () {
            $('.mhn-slide2').owlCarousel({
                nav: true,
                //loop:true,
                slideBy: 'page',
                rewind: false,
                responsive: {
                    0: { items: 1 },
                    480: { items: 1 },
                    600: { items: 1 },
                    1000: { items: 3 }
                },
                smartSpeed: 70,
                onInitialized: function (e) {
                    $(e.target).find('img').each(function () {
                        if (this.complete) {
                            $(this).closest('.mhn-inner').find('.loader-circle').hide();
                            $(this).closest('.mhn-inner').find('.mhn-img').css('background-image', 'url(' + $(e.target).attr('src') + ')');
                        } else {
                            $(this).bind('load', function (e) {
                                $(e.target).closest('.mhn-inner').find('.loader-circle').hide();
                                $(e.target).closest('.mhn-inner').find('.mhn-img').css('background-image', 'url(' + $(e.target).attr('src') + ')');
                            });
                        }
                    });
                },
                navText: ['<i class="fas fa-chevron-left"></i>', '<i class="fas fa-chevron-right"></i>']
            });
        });
    </script>
</body>
</html>