    SystemSettingService service = new SystemSettingService();
    service.ClientID = new Guid("90518588-f30d-49aa-8273-0a29f16ea409");
    var ClientInfo = service.Get<ClientInfoViewModel>(SystemSettingType.ClientInfo);
