    <link href="~/html/Aiot/css/bootstrap.min.css" rel="stylesheet" />

    <script ID=clientEventHandlersJS LANGUAGE=javascript>
        function btnDivShow_onclick() {
            div1.style.display = '';
        }

        function btnDivH_onclick() {
            div1.style.display = 'none';
