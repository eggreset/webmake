@using MyTool.Enums
@using WabMaker.Web.Helpers
@using WabMaker.Web.WebViewModels
@using MyTool.ViewModels
@using MyTool.Services
@model string
@* 搜尋結果 *@
@{
    ViewBag.Title = "搜尋結果";
    Layout = "../Shared/_Layout.cshtml";
}

<section class="hotnews-section mt-65">
    <div class="auto-container">
        <div class="text-right">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">首頁</a></li>
                <li class="breadcrumb-item active"><a href="@Url.Action()">@ViewBag.Title</a></li>
            </ol>
        </div>
        <div class="row">
            <div class="col-md-offset-1 col-md-10 col-xs-12 mb-30">
                <div class="hotnews-recommend">
                    <div class="hotnews-title">
                        <span class="hotnews-title-inner">@Model @ViewBag.Title</span>
                    </div>
                </div>

                <div id="ListContent" class="action-tab panel">
                    @Html.Action("Partial", "Item", new ItemPageModel
               {
                   ViewName = "Search_Page",
                   PageSize = 10,
                   SortColumn = SortColumn.Date,
                   StructureJson = _Json.ModelToJson(new List<Guid> {
                       new Guid("2888b78f-ccf3-4920-8d71-c6f2e669ebe3")//一般文章
                       }),
                   SearchString = Model
               })
                </div>
            </div>
        </div>
    </div>
</section>


