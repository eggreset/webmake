@using MyTool.ViewModels
@using WabMaker.Web.Helpers
@{
    ApiKeyViewModel ApiKey = ApplicationHelper.ApiKey;
}

<div id="LoadingMask" style="display:none;z-index: 5000;
        position: fixed;top: 0;right: 0;bottom: 0;left: 0;opacity: .5;background-color: #000;transition: opacity .15s linear;">

    <div style="position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -30px;
        margin-left: -50px;
        color: #fff;
        text-align: center;
        padding: 0;
        width: 100px;">

        <i class="fa fa-circle-o-notch fa-pulse fa-3x fa-fw" style="font-size: 3em;"></i>
    </div>
</div>

@* pagination *@
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
@* validate *@
@Scripts.Render("~/bundles/jqueryval")
@* custom *@
<script src="~/Scripts/custom/web.js?v=2019.6.28"></script>
<script>
    web.init();
</script>

@if (!ApplicationHelper.IsLocal)
{
    <!-- Global site tag (gtag.js) - Google Analytics -->
    if (ApiKey != null && !string.IsNullOrEmpty(ApiKey.GoogleAnalyticsId))
    {
        <script async src="https://www.googletagmanager.com/gtag/js?id=@(ApiKey.GoogleAnalyticsId)"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());

            gtag('config', '@(ApiKey.GoogleAnalyticsId)');
        </script>
    }

    if (!string.IsNullOrEmpty(ApplicationHelper.WebSetting.TraceCode))
    {
        <script id='xn' ci='@ApplicationHelper.WebSetting.TraceCode' src='https://r.xnet.world/xn.js'></script>
    }
}


