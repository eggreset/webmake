@using MyTool.Enums
@using MyTool.Services
@model MyTool.Commons.CiResult<WebMaker.Entity.ViewModels.ValidCodeResultViewModel>
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "驗證信";
}

<!-- ****** Blog Area Start ****** -->
<section class="blog_area section_padding_0_80 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="row no-gutters">
                    <!-- ******* 文章版位2 ******* -->
                    <!-- Single Post -->
                    <div class="col-12">
                        <div class="single-post wow fadeInUp" data-wow-delay=".2s">
                            <!-- Post Content -->
                            <div class="post-content">
                                <h2 class="post-headline">@Model.Data.ValidType.GetDisplayName()</h2>
                                @if (!Model.IsSuccess)
            {
                                    <p>@Model.Message</p>
                                }
                                else
                                {
                                    <div class="">
                                        <h3 class="">@Model.Message</h3>

                                        @if (Model.Data.ValidType == ValidType.ForgotPassword)
                                        {
                                            @Html.Partial(WabMaker.Web.Controllers.BaseController.ViewName("Member", "_ResetPassword"),
         new WebMaker.Entity.ViewModels.ResetPasswordViewModel { UserID = Model.Data.UserID })
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ****** Blog Area End ****** -->