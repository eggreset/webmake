                   data-val="true" data-val-length="不得大於100個字元" data-val-length-max="100" data-val-required="請輸入管理名稱">
            @Html.ValidationMessageFor(model => model.OrderViewModel.Order.Manager, "", new { @class = "text-danger" })
        }
